<Window x:Class="LBMAutoPause.LocateLBM"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LBMAutoPause"
        mc:Ignorable="d"
        Title="Locate LittleBigMouse_Daemon.exe" Height="450" Width="800" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <StackPanel Margin="10,10,10,10">
        <Label Padding="0,0,0,0" Margin="0,0,0,10" Content="Could not find LittleBigMouse_Daemon.exe. Please locate it manually"/>
        <DockPanel>
            <Button x:Name="buttonBrowse" DockPanel.Dock="Right" Padding="10,1,10,1" Margin="10,0,0,0" Click="buttonBrowse_Click" Height="25">Browse...</Button>
            <TextBox x:Name="textBox" />
        </DockPanel>
        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="buttonAccept" IsDefault="True" Margin="0,5,5,0" Height="30" Click="buttonAccept_Click">Accept</Button>
            <Button IsCancel="True" Grid.Column="1" Margin="5,5,0,0">Quit</Button>
        </Grid>
    </StackPanel>
</Window>
