<Window x:Class="LBMAutoPause.AddDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LBMAutoPause"
        mc:Ignorable="d"
        Title="Add executable" ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10,10,10,10">
        <Label Padding="0,0,0,0" Margin="0,0,0,10" Content="Type executable name or pick one"/>
        <DockPanel>
            <Button x:Name="buttonBrowse" DockPanel.Dock="Right" Padding="10,1,10,1" Margin="10,0,0,0" Click="buttonBrowse_Click" Height="25">Browse...</Button>
            <TextBox x:Name="textBox" PreviewTextInput="textBox_PreviewTextInput" />
        </DockPanel>
        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="buttonAccept" IsDefault="True" Margin="0,5,5,0" Height="30" Click="buttonAccept_Click">Accept</Button>
            <Button IsCancel="True" Grid.Column="1" Margin="5,5,0,0">Cancel</Button>
        </Grid>
    </StackPanel>
</Window>
